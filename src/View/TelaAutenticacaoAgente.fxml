<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerAutenticacaoAgente">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="40.0" prefHeight="270.0" prefWidth="350.0" spacing="25.0" style="-fx-background-color: #ffffff; -fx-border-radius: 15px; -fx-background-radius: 15px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 8, 0, 0, 3);">
            <children>
                <Label style="-fx-font-size: 22px; -fx-text-fill: #34495e; -fx-font-weight: bold;" text="Confirmar Exclusão" />
                <Label alignment="CENTER" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Para prosseguir com a exclusão, por favor, digite sua senha." wrapText="true" />

                <VBox spacing="8.0">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="Senha do Agente:" />
                    <PasswordField fx:id="txtSenhaAgente" prefWidth="280.0" promptText="Sua senha" style="-fx-font-size: 14px; -fx-background-color: #ecf0f1; -fx-border-radius: 8px; -fx-border-color: #bdc3c7; -fx-padding: 10px;" />
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnCancelar" onAction="#actionCancelar" prefWidth="100.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8px; -fx-cursor: hand;" text="Cancelar">
                            <padding>
                                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                            </padding>
                        </Button>
                        <Button fx:id="btnConfirmar" onAction="#actionConfirmar" prefHeight="42.0" prefWidth="112.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-border-radius: 8px; -fx-cursor: hand;" text="Confirmar">
                            <padding>
                                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                            </padding>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
